<% if user_signed_in? and current_user.tipo == 'administrador' %>

	<p id="notice"><%= notice %></p>

	<p>
	  <strong>Val km:</strong>
	  <%= @kilometers_price.val_km %>
	</p>

	<p>
	  <strong>Ini val km:</strong>
	  <%= @kilometers_price.ini_val_km %>
	</p>

	<p>
	  <strong>Fin val km:</strong>
	  <%= @kilometers_price.fin_val_km %>
	</p>

	<p>
	  <strong>Estado val km:</strong>
	  <%= @kilometers_price.estado_val_km %>
	</p>

	<%= button_to 'Editar', edit_kilometers_price_path(@kilometers_price) , :method => 'get', :class => 'btn btn-warning'%> |
	<%= button_to 'Volver', kilometers_prices_path , :method => 'get', :class => 'btn btn-default'%>

<% end %>