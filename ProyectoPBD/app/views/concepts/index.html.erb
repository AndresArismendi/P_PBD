

  <h1>Listing concepts</h1>

  <table>
    <thead>
      <tr>
        <th>Nom conc</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @concepts.each do |concept| %>
        <tr>
          <td><%= concept.nom_conc %></td>
          <td><%= button_to 'Ver', concept, :method => 'get', :class => 'btn btn-info' %></td>
          <td><%= button_to 'Editar', edit_concept_path(concept), :method => 'get', :class => 'btn btn-warning' %></td>
          <td><%= button_to 'Eliminar', concept, method: :delete, data: { confirm: '¿Confirma eliminación?' }, :class => 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= button_to 'Nuevo', new_concept_path, :method => 'get', :class => 'btn btn-default' %>

