<h1>Listing vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Run own</th>
      <th>Pat veh</th>
      <th>Mar veh</th>
      <th>Model veh</th>
      <th>Tipo veh</th>
      <th>Km sem veh</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.run_own %></td>
        <td><%= vehicle.pat_veh %></td>
        <td><%= vehicle.mar_veh %></td>
        <td><%= vehicle.model_veh %></td>
        <td><%= vehicle.tipo_veh %></td>
        <td><%= vehicle.km_sem_veh %></td>
        <td><%= link_to 'Ver', vehicle %></td>
        <td><%= link_to 'Editar', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Eliminar', vehicle, method: :delete, data: { confirm: '¿Confirma eliminación??' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

