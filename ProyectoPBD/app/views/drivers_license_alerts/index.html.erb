<h1>Listing drivers_license_alerts</h1>

<table>
  <thead>
    <tr>
      <th>Plant alert licenc</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @drivers_license_alerts.each do |drivers_license_alert| %>
      <tr>
        <td><%= drivers_license_alert.plant_alert_licenc %></td>
        <td><%= button_to 'Ver', drivers_license_alert, :method => 'get', :class => 'btn btn-info' %></td>
        <td><%= button_to 'Editar', edit_drivers_license_alert_path(drivers_license_alert), :method => 'get', :class => 'btn btn-warning' %></td>
        <td><%= button_to 'Eliminar', drivers_license_alert, method: :delete, data: { confirm: '¿Confirma eliminación?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Nuevo', new_drivers_license_alert_path, :method => 'get', :class => 'btn btn-default' %>
