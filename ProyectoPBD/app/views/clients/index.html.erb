<h1>Listing clients</h1>

<table>
  <thead>
    <tr>
      <th>Run cli</th>
      <th>Nom cli</th>
      <th>Apells cli</th>
      <th>Tel1 cli</th>
      <th>Tel2 cli</th>
      <th>Email cli</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.run_cli %></td>
        <td><%= client.nom_cli %></td>
        <td><%= client.apells_cli %></td>
        <td><%= client.tel1_cli %></td>
        <td><%= client.tel2_cli %></td>
        <td><%= client.email_cli %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

