<h1>Listing offer_vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Id veh</th>
      <th>Id block</th>
      <th>Est oferta veh</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @offer_vehicles.each do |offer_vehicle| %>
      <tr>
        <td><%= offer_vehicle.id_veh %></td>
        <td><%= offer_vehicle.id_block %></td>
        <td><%= offer_vehicle.est_oferta_veh %></td>
        <td><%= link_to 'Ver', offer_vehicle %></td>
        <td><%= link_to 'Editar', edit_offer_vehicle_path(offer_vehicle) %></td>
        <td><%= link_to 'Eliminar', offer_vehicle, method: :delete, data: { confirm: '¿Confirma eliminación?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

