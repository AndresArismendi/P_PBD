<h1>Listing offer_vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Id veh</th>
      <th>Id block</th>
      <th>Est oferta veh</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @offer_vehicles.each do |offer_vehicle| %>
      <tr>
        <td><%= offer_vehicle.id_veh %></td>
        <td><%= offer_vehicle.id_block %></td>
        <td><%= offer_vehicle.est_oferta_veh %></td>
        <td><%= button_to 'Ver', offer_vehicle , :method => 'get', :class => 'btn btn-info'%></td>
        <td><%= button_to 'Editar', edit_offer_vehicle_path(offer_vehicle) , :method => 'get', :class => 'btn btn-warning'%></td>
        <td><%= button_to 'Eliminar', offer_vehicle, method: :delete, data: { confirm: '¿Confirma eliminación?' } , :class => 'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Nuevo', new_offer_vehicle_path , :method => 'get', :class => 'btn btn-default'%>
