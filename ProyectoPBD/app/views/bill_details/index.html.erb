<h1>Listing bill_details</h1>

<table>
  <thead>
    <tr>
      <th>Id bill</th>
      <th>Id conc</th>
      <th>Monto det fact</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bill_details.each do |bill_detail| %>
      <tr>
        <td><%= bill_detail.id_bill %></td>
        <td><%= bill_detail.id_conc %></td>
        <td><%= bill_detail.monto_det_fact %></td>
        <td><%= link_to 'Ver', bill_detail %></td>
        <td><%= link_to 'Editar', edit_bill_detail_path(bill_detail) %></td>
        <td><%= link_to 'Eliminar', bill_detail, method: :delete, data: { confirm: '¿Confirma eliminación?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

