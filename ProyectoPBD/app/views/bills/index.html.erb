<h1>Listing bills</h1>

<table>
  <thead>
    <tr>
      <th>Rut ent</th>
      <th>Fecha fact</th>
      <th>Total fact</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.rut_ent %></td>
        <td><%= bill.fecha_fact %></td>
        <td><%= bill.total_fact %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

